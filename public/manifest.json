{
  "manifest_version": 3,
  "name": "XertiQ Wallet",
  "version": "1.0.0",
  "description": "Blockchain-based document verification and certificate issuance wallet.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "notifications",
    "downloads"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/xertiq.png",
      "48": "icons/xertiq.png",
      "128": "icons/xertiq.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://localhost:3000/*",
    "https://api.devnet.solana.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
